.icon_cara{
  display:flex;
  justify-content: space-around;
  position: absolute;
  bottom: 50px;
  width: 100%;
}
.icon_cara cover-image{
  width: 50px;
  height: 50px;
  opacity: 0.7;
}
.dis_img image{
  display: block;
}
.reChoose{
  position:fixed;
  bottom:30px;
  left:50%;
  transform:translate(-50%);
  box-shadow: 0px 1px 5px #666;
}
.getInfo{
  position:absolute;
  top:50%;
  left:50%;
  transform:translate(-50%,-50%);
  border-radius: 5px;
  width: 80%;
  height: 150px;
  background-color: rgba(255, 255, 255, 0.5);
  box-shadow: 0px 1px 5px #eee;
  display:flex;
  flex-direction: column;
  justify-content: space-around;
}
.getInfo_box{
  display:flex;
  justify-content: space-around;
  font-size: 14px;
}
